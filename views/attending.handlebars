<div class="container">

  <nav>
    <div class="nav-wrapper">
    <a href="#" class="brand-logo">{{username}}</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/user" class="active">Dashboard</a></li>
        <li><a href="/events">Your Events</a></li>
        <li><a href="/attending">Attending</a></li>
      </ul>
    </div>
  </nav>

  <div class="row">
    <div class="col m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Events Attending</span>
        </div>
      </div>
      {{#each eventsAtt}}
        <div class="col m12">
          <div class="card light-blue darken-1">
            <div class="card-content white-text">
              <span class="card-title">{{this.event}}</span>
              <p>{{this.desc}}</p>
              <p>Where: {{this.location}}</p>
              <p>When: {{this.time}} on {{this.date}}</p>
              <br>
              <form method="post" action="/delete?_method=DELETE">
                <input type="hidden" name="id" value="{{this.id}}">
                <button class="btn red" type="submit">delete</button>
              </form>
            </div>
          </div>
        </div>
      {{else}}
        <div class="card red darken-1">
          <div class="card-content white-text">
            <span class="card-title">Hello!</span>
            <p>You are not attending any events yet!</p>
          </div>
        </div>
      {{/each}}
      </div>
    </div>
</div>











 